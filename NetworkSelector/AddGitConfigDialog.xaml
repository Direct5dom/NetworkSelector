<ContentDialog
    x:Class="NetworkSelector.AddGitConfigDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer Width="280">

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- <TextBlock x:Name="Test" Foreground="DarkGray" FontSize="12"/> -->
            <TextBox x:Name="IPAddr" TextChanged="TextChanged" Header="代理 IP 地址：" Width="250" Margin="0,8,0,0"/>
            <TextBlock Text="eg: 127.0.0.1" Foreground="DarkGray" FontSize="12"/>
            <TextBox x:Name="IPPort" TextChanged="TextChanged" Header="代理端口：" Width="250" Margin="0,8,0,0"/>
            <TextBlock Text="eg: 7890" Foreground="DarkGray" FontSize="12"/>
        </StackPanel>

    </ScrollViewer>
</ContentDialog>
